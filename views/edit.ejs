<div class="container">

    <div class="row justify-content-center">
        <h1>Edit a Post%></h1>
    </div>

    <div class="row border">

        <form action="/reviews" method="POST">
            <input type="text" placeholder="Title" name="post[name]" value="<%= review.name %>">
            <input type="text" placeholder="Image URL" name="post[image]">
            <textarea name="post[review]" placeholder="Enter your review here"></textarea>
            <button>Submit</button>
        </form>
    </div>


</div>





