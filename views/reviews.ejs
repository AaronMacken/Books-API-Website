<% include partials/header %>

<div class="container border">
    <div class="row justify-content-center">
        <h1>Read Reviews</h1>
    </div>

    <div class="row justify-content-center border">
        <% reviews.forEach((e) => { %>
        <div class="col-md-8 text-center">

            <h5>
                <%= e.name %>
            </h5>

            <img src="<%= e.image %>" alt="">

            <p> Review: <%= e.review %> </p>

        </div>
        <% }); %>
    </div>



</div>




<% include partials/footer %>