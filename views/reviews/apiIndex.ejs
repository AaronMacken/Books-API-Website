<% include ../partials/header %>

<div class="container">
  <div class="row justify-content-center my-1 border">
    <h1>Search a Book</h1>
  </div>

  <div class="row justify-content-center">
    <form method="GET" action="/searchbook">
      <input type="text" placeholder="Enter name of book" name="key" />
      <button>Submit</button>
    </form>
  </div>

  <div class="row text-center border" style="display: flex; flex-wrap: wrap;">
    <% info.books.forEach((e) => { %>
    <div class="card col-md-4 col-sm-12" style="width: 18rem;">
      <img src="<%= e.image %>" class="card-img-top" />
      <div class="card-body">
        <a href="<%= e.url %>" class="card-title"><h5><%= e.title %></h5></a>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
